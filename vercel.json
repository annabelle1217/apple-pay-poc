{
  "version": 2,
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node", "config": { "includeFiles": ["node_modules/axios/**"] } },
    { "src": "public/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1.js" },
    { "src": "/(.*)", "dest": "/public/$1" }
  ]
}